  <div class="page-header">
    <h1>Current Searches</h1>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <a href="/keywords/new" class="btn btn-success pull-right">Add</a>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      {{#if keywords}}
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Initiated</th>
              <th>Keyword</th>
              <th>Status</th>
              <th>More</th>
            </tr>
          </thead>
          <tbody>
            {{#each keywords as |keyword|}}
                <tr>
                  <td>{{@index}}</td>
                  <td>{{keyword.created}}</td>
                  <td>{{keyword.parameter}}</td>
                  {{#if keyword.status}}
                    <td>Active</td>
                  {{else}}
                    <td>Inactive</td>
                  {{/if}}
                  <td><a href="/keywords/{{keyword._id}}">View</a></td>
                </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <h1 class="text-center">There are no active searches, <a href="/keywords/new">add</a> a new one.</h1>
      {{/if}}
    </div>
  </div>
