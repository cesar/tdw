<div class="page-header">
  <h1>Searching for: <small>{{firstParameter}} | {{secondParameter}} | {{thirdParameter}}</small></h1>
</div>
<div class="row">
  <div class="col-lg-12">
    <a href="/keywords/new" class="btn btn-danger pull-right">Cancel</a>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Tweet</th>
          <th>User</th>
        </tr>
      </thead>
      <tbody>
        {{#each tweets as |tweet|}}
            <tr>
              <td>{{@index}}</td>
              <td>{{tweet.tweet.text}}</td>
              <td>{{tweet.tweet.user.screen_name}}</td>
            </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
